<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tvCampusName"
        style="@style/text_universitity"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/reitoria"
        app:layout_constraintStart_toEndOf="@id/ivImageCampus"
        app:layout_constraintTop_toTopOf="@id/ivImageCampus"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="22dp"
        android:layout_width="240dp"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/ivImageCampus"
        android:layout_width="33dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="22dp"
        android:background="#98FB98"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
<!--        app:srcCompat="@drawable/ic_location_city_24px"/>-->
<!--        tools:layout_editor_absoluteX="16dp"-->
<!--        tools:layout_editor_absoluteY="29dp" />-->

    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manaus"
        android:textColor="#288437"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/tvCampusName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintTop_toTopOf="@id/tvCampusName"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="@id/ivImageCampus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#17983B"/>


</androidx.constraintlayout.widget.ConstraintLayout>